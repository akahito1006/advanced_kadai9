<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size:'100x100' %>
<table class="table">
  <tbody>
    <tr></tr>
    <!--不要であれば消すこと-->
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

<div class="row">
    <% if (current_user != @user) %>
      <%= link_to 'chatを始める', chat_path(@user.id) %>
    <% end %>
    <%= link_to "", edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
</div>