<h2>User info</h2>
<%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg", size:'100x100' %>
<table class="table">
  <tbody>
    <tr></tr>
    <!--不要であれば消すこと-->
    <tr>
      <th>name</th>
      <th><%= @book.user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @book.user.introduction %></th>
    </tr>
  </tbody>
</table>

<div class="row">
  <% if user.id == current_user.id %>
    <%= link_to "", edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
  <% else %>
    <%= link_to "", user_path(current_user.id), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
  <% end %>
</div>


